<%= render 'users/info', user: @user %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
    <table class="table table-striped">
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %><br><%= link_to @book.user.name, user_path(@user.id) %></td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to 'Destroy', book_path(@book.id), class: "btn btn-danger", method: :delete, data: { confirm: '削除しますか？' } %></td>
        <% end %>
      </tr>
    </table>
</div>