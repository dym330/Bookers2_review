<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
    <table class="table table-striped">
      <tr>
        <td></td>
        <td>Title</td>
        <td>Opinion</td>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
</div>