<div class="mx-auto col-11 col-sm-10 col-lg-8 col-xl-6">
  <h1>User info</h1>
  <%= form_with model:@user, local:true do |f| %>
    <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, class: "form-control" %>
    
    <%= f.label :profile_image, "Image" %>
    <%= f.attachment_field :profile_image, class: "form-control-file" %>

    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: "form-control" %>
    
    <%= f.submit 'Update User', class: "btn btn-secondary" %>
  <% end %>
</div>