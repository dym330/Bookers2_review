<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "Bookers", root_url, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id) do %>
              <i class="fas fa-home nav-link text-light"> Home</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#" do %>
              <i class="fas fa-users nav-link text-light"> Users</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path do %>
              <i class="fas fa-book nav-link text-light"> Books</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out-alt nav-link text-light"> logout</i>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to root_url do %>
              <i class="fas fa-home nav-link text-light"> Home</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#" do %>
              <i class="fas fa-link nav-link text-light"> About</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path do %>
              <i class="fas fa-user-plus nav-link text-light"> sign up</i>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt nav-link text-light"> Login</i>
            <% end %>
          </li>
        <% end %>

      </ul>
      
    </div>
  </nav>
</header>